
@{
    ViewBag.Title = "To-Do List";
}

<h2>To-Do List</h2>
<h4>via WCF service client</h4>
@using (Html.BeginForm("Create", "TaskService", FormMethod.Post))
{
    <div>
        New Item: <input type="text" name="description">
        <input type="submit" value="Add">
    </div>
}

<br />

<table class="table table-bordered table-hover table-striped" style="table-layout: auto">

    <tr>
        <th>Items:</th>
    </tr>

    @foreach (var item in ViewBag.Tasks)
    {
        <tr>
            <td>
                @using (Html.BeginForm("Delete", "TaskService", FormMethod.Post))
                {
                    <div style="max-width:90%;overflow-x:hidden;text-overflow:ellipsis">@item.Text</div>
                    <button name="id" value="@item.Id" style="float:right">Delete</button>
                }
            </td>
        </tr>
    }

</table>