@{
    ViewBag.Title = "To-Do List";
}

<h2>To-Do List</h2>
<h4>via WebAPI [@ViewBag.ApiEndpoint]</h4>
@using (Html.BeginForm("Create", "Tasks", FormMethod.Post))
{
    <div class="form-group form-inline">
        <input type="text" class="form-control" style="width:300px;" name="description" placeholder="<new item>">
        <input type="submit" class="btn btn-success"  value="Add">
    </div>
}

<br />

<table class="table table-bordered table-hover table-striped" style="table-layout: auto">

    <tr>
        <th>Items:</th>
    </tr>

    @foreach (var item in ViewBag.Tasks)
    {
        <tr>
            <td>
                @using (Html.BeginForm("Delete", "Tasks", FormMethod.Post))
                {@item["Text"]
                <button name="id" value="@item["Id"]" style="float:right">Delete</button>
            }
            </td>
        </tr>
    }

</table>